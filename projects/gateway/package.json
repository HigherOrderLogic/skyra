{
	"name": "skyra-gateway",
	"version": "7.0.0",
	"description": "Multipurpose Discord Bot built on Sapphire Framework",
	"author": "Skyra Project",
	"license": "Apache-2.0",
	"private": true,
	"main": "dist/main.js",
	"type": "module",
	"imports": {
		"#lib/*": "./dist/lib/*.js"
	},
	"scripts": {
		"build": "tsc -b src",
		"dev": "yarn build && yarn start",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"start": "node --enable-source-maps dist/main.js",
		"test": "eslint --ext ts src",
		"lint": "eslint --fix --ext ts src",
		"format": "prettier --write --loglevel=warn \"src/**/*.{js,ts,mts,json}\""
	},
	"dependencies": {
		"@discordjs/rest": "^1.0.1",
		"@discordjs/ws": "^0.2.0",
		"@sapphire/utilities": "^3.8.0",
		"@skyra/env-utilities": "^1.0.2",
		"@skyra/start-banner": "^1.0.2",
		"discord-api-types": "^0.37.0",
		"gradient-string": "^2.0.1",
		"skyra-shared": "workspace:^"
	},
	"devDependencies": {
		"typescript": "^4.7.4"
	}
}
